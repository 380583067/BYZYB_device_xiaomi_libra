+#!/sbin/sh
+#
+# ADDOND_VERSION=2
+#
+
+. /tmp/backuptool.functions
+
+list_files() {
+  cat <<EOF
+bin/su
+etc/init/superuser.rc
+xbin/su
+EOF
+}
+
+case "$1" in
+backup)
+  list_files | while read FILE DUMMY; do
+    backup_file $S/"$FILE"
+  done
+  ;;
+restore)
+  list_files | while read FILE REPLACEMENT; do
+    R=""
+    [ -n "$REPLACEMENT" ] && R="$S/$REPLACEMENT"
+    restore_file $S/"$FILE" "$R"
+  done
